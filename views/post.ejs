<%- include('partials/postHeader', {postTitle: post.title, blogTitle: 'Co2plant Blog'}) %>   
    <div class="max-w-4xl mx-auto px-4 py-8">
        <article class="bg-white rounded-lg shadow-md p-8">
            <header class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= post.title %></h1>
                <div class="text-gray-600">
                    <span>작성일: <%= post.date %></span>
                    <% if (post.category) { %>
                        <span class="ml-4">카테고리: <span class="bg-gray-200 px-2 py-1 rounded text-sm"><%= post.category %></span></span>
                    <% } %>
                </div>
            </header>
            
            <div class="prose max-w-none mb-8">
                <%- post.content %>
            </div>
            
            <footer class="border-t pt-6">
                <div class="flex justify-between items-center">
                    <a href="/" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">← 목록으로 돌아가기</a>
                    <div class="flex space-x-2">
                        <% if (post.prevPost) { %>
                            <a href="/posts/<%= post.prevPost.id %>" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">← 이전 글</a>
                        <% } %>
                        <% if (post.nextPost) { %>
                            <a href="/posts/<%= post.nextPost.id %>" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">다음 글 →</a>
                        <% } %>
                    </div>
                </div>
            </footer>
        </article>
    </div>
    
<%- include('partials/postFooter') %>