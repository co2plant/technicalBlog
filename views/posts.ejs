<%- include('partials/header') %>
    
    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <h1 class="text-3xl font-bold mb-6">모든 게시글</h1>
                
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                            <h2 class="text-xl font-semibold mb-2">
                                <a href="/posts/<%= post.id %>" class="text-gray-900 hover:text-blue-600">
                                    <%= post.title %>
                                </a>
                            </h2>
                            <p class="text-gray-600 text-sm mb-3">
                                작성일: <%= post.date %>
                                <% if (post.category) { %>
                                    <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-xs ml-2"><%= post.category %></span>
                                <% } %>
                            </p>
                            <p class="text-gray-700 mb-4"><%= post.excerpt %></p>
                            <a href="/posts/<%= post.id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">더 읽기</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded">
                        아직 게시글이 없습니다.
                    </div>
                <% } %>
            </div>
            
            <div class="space-y-6">
                <div class="bg-white rounded-lg shadow-md">
                    <div class="bg-gray-50 px-4 py-3 border-b">
                        <h5 class="font-semibold">카테고리</h5>
                    </div>
                    <div class="p-4">
                        <ul class="space-y-2">
                            <li><a href="/category/javascript" class="text-blue-600 hover:text-blue-800">JavaScript</a></li>
                            <li><a href="/category/nodejs" class="text-blue-600 hover:text-blue-800">Node.js</a></li>
                            <li><a href="/category/react" class="text-blue-600 hover:text-blue-800">React</a></li>
                            <li><a href="/category/database" class="text-blue-600 hover:text-blue-800">Database</a></li>
                        </ul>
                    </div>
                </div>
                
                <div class="bg-white rounded-lg shadow-md">
                    <div class="bg-gray-50 px-4 py-3 border-b">
                        <h5 class="font-semibold">태그</h5>
                    </div>
                    <div class="p-4">
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm mr-1 mb-1 inline-block">웹개발</span>
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm mr-1 mb-1 inline-block">프론트엔드</span>
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm mr-1 mb-1 inline-block">백엔드</span>
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm mr-1 mb-1 inline-block">JavaScript</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<%- include('partials/postFooter') %>
